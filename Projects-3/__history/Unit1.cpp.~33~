{
}
//
void __fastcall TForm1::SetStartupValue(int v)
{
	Label5->Caption = IntToStr(v);
}
//---------------------------------------------------------------------------
void __fastcall TForm1::ButtonBackClick(TObject *Sender)
{
	this->Close();       // це знищить Form2
    Form2->Show();       // але Form1 лишається
}
//---------------------------------------------------------------------------
void __fastcall TForm1::FormClose(TObject *Sender, TCloseAction &Action)
{

	Form1->Close();
	Form2->Close();
   	Application->Terminate();
}



void __fastcall TForm1::Button1Click(TObject *Sender)
{
		int day = SpinEdit1->Value;
		int month = SpinEdit2->Value;
		int year = StrToIntDef(Edit1->Text, 1970);
		TDateTime dt(EncodeDate(1992, 10, 22));
		TFile::SetLastWriteTime("id.pas", dt);
}
